<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesTargetsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.05"
            android:contentDescription="@string/sales"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sales"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="770dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewSalesTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="@color/brownTan" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gotham"
            android:text="@string/worksphere"
            android:textColor="#7B3F00"
            android:textSize="40sp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sales Targets"
            android:textColor="#7B3F00"
            android:textSize="30sp" />

        <!-- Placeholder for Shift 1 -->
        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="137dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift1DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shift1SalesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/shift1Achieved"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_below="@+id/shift1SalesText"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Sales Achieved"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <!-- Placeholder for Shift 2 -->
        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="132dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift2DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shift2SalesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/shift2Achieved"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/shift2SalesText"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Sales Achieved"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <!-- Placeholder for Shift 3 -->
        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="135dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift3DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shift3SalesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/shift3Achieved"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/shift3SalesText"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Sales Achieved"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/save" />

    </LinearLayout>
</RelativeLayout>