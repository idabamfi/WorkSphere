<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="2dp"
        android:minHeight="120dp"
        app:cardBackgroundColor="#F5E6DC"
        app:cardElevation="2dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp">

            <TextView
                style="@style/viewParent.headerText"
                android:minHeight="48dp"
                android:onClick="view"
                android:text="Set Shifts"
                android:textColor="@color/brownTan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Shifts for Employees"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/buttonSetShifts"
                android:layout_width="108dp"
                android:layout_height="48sp"
                android:layout_marginHorizontal="150sp"
                android:background="@drawable/buttonshapecreambg"
                android:fontFamily="@font/calibri"
                android:onClick="view"
                android:text="Next>>"
                android:textAllCaps="false"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_shifts_img"
        android:layout_centerVertical="true"
        android:elevation="13dp"/>

</RelativeLayout>

